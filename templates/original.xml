<!-- This is a document template for an original document.
  You may remove any of the comments. Look for "??" where you need to
  fill in information.
  -->
<tei:TEI 
    xmlns:tei="http://www.tei-c.org/ns/1.0" 
    xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0" 
    xml:lang="??">
    <!--      ^^ Fill in the primary language above. 
                 Use "en" for English, "he" for Hebrew, "arc" for Aramaic  
    -->
    <tei:teiHeader>
        <tei:fileDesc>
            <tei:titleStmt>
                <tei:title type="main" xml:lang="??"><!--?? FILL in the main title here --></tei:title>
                <tei:title type="alt" xml:lang="??"><!--?? FILL in a translated title here --></tei:title>
                <tei:title type="sub" xml:lang="??"><!--?? FILL in a subtitle here (optional) --></tei:title>
                <!-- ?? you can have one or more optional respStmts that give credit to
                third parties for work they did on the document.
                -->
                <tei:respStmt>
                    <tei:resp key="???"><!--?? "Transcribed by", "Edited by"... --></tei:resp>
                    <tei:name ref="/data/user/??PROFILE"><!--?? Name here --></tei:name>
                </tei:respStmt>
            </tei:titleStmt>
            <tei:publicationStmt>
                <tei:availability status="???">
                    <!--                  ^^^ "free" (CC0 license/public domain) or 
                                              "restricted" (any other license)
                    -->
                    <tei:licence target="http://www.creativecommons.org/publicdomain/zero/1.0"/><!-- <- CC0
                    <tei:licence target="http://www.creativecommons.org/licenses/by/4.0"/> <- CC-BY 4.0
                    <tei:licence target="http://www.creativecommons.org/licenses/by-sa/4.0"/> <- CC-BY-SA 4.0
                    -->
                </tei:availability>
                <tei:distributor>
                    <tei:ref target="http://opensiddur.org">Open Siddur Project</tei:ref>
                </tei:distributor>
                <tei:date><!-- ?? Date the file was started, on or offline: YYYY-MM-DD --></tei:date>
            </tei:publicationStmt>
            <tei:sourceDesc>
                <tei:link type="bibl" target="#stream /data/sources/???"/>
                <!--                                              ^^^ fill in the link to the bibliography entry -->
            </tei:sourceDesc>
        </tei:fileDesc>
        <tei:revisionDesc>
            <!-- this will be edited automatically when you save -->
        </tei:revisionDesc>
    </tei:teiHeader>
    <tei:text>
        <j:streamText xml:id="stream">
            <!--?? the text goes in tei:seg elements here.
            the seg elements are required to have an xml:id attribute,
            and each xml:id attribute has to have a value that is unique within the document.
            -->
            <tei:seg xml:id="seg1">This is a segment of text.</tei:seg>
            <tei:anchor xml:id="anchor1"/>   <!-- anchor point -->
            <tei:seg xml:id="seg2">
                <!-- breaking up the segment into words (tei:w) and punctuation (tei:pc) is optional, but recommended -->
                <tei:w xml:id="seg2w1">A</tei:w>
                <tei:w xml:id="seg2w2">segment</tei:w>
                <tei:w xml:id="seg2w3">broken</tei:w>
                <tei:w xml:id="seg2w4">up</tei:w>
                <tei:w xml:id="seg2w5">by</tei:w>
                <tei:w xml:id="seg2w6">words</tei:w>
                <tei:pc xml:id="seg2pc7">-</tei:pc>
                <tei:w xml:id="seg2w8">and</tei:w>
                <tei:w xml:id="seg2w9">punctuation</tei:w>
                <tei:pc xml:id="seg2pc10">.</tei:pc>
            </tei:seg>
            <tei:anchor xml:id="anchor2"/>
            <tei:ptr target="/data/original/name#stream"/>  <!-- this is an inclusion of external text -->
        </j:streamText>
        <!-- here's a section of concurrent hierarchies -->
        <j:concurrent>
            <j:layer type="p" xml:id="layer_p">
                <tei:p>
                    <tei:ptr target="#seg1"/>
                    <tei:ptr target="#seg2"/>
                </tei:p>
            </j:layer>
            <j:layer type="div" xml:id="layer_div">
                <tei:div>
                    <tei:head><!--?? header text --></tei:head>
                    <tei:ab>
                        <!-- here's a different way to express including text -->
                        <tei:ptr target="#range(anchor1,anchor2)"/>
                    </tei:ab>
                </tei:div>
            </j:layer>
        </j:concurrent>
   </tei:text>
</tei:TEI>
